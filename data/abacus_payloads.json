import { useRouter } from 'next/router';
import payloads from '../../data/abacus_payloads.json';

export default function BusinessDemo() {
  const router = useRouter();
  const { business } = router.query;

  const demo = payloads.find((item) => item.slug === business);

  if (!demo) {
    return <div>No demo found for: {business}</div>;
  }

  return (
    <div>
      <h1>{demo.business.name}</h1>
      <p>{demo.agentIntro}</p>
      <video src={demo.videoUrl} controls width="600" />
    </div>
  );
}
